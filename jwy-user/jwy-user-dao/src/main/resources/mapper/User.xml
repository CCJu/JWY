<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jwy.mapper.UserMapper">
    <resultMap id="userInfo" type="com.jwy.entity.UserInfoDto">
        <id column="userId" property="userId" jdbcType="VARCHAR"/>
        <result column="userName" property="userName" jdbcType="VARCHAR"/>
        <result column="gender" property="gender" jdbcType="CHAR"
                typeHandler="org.apache.ibatis.type.IntegerTypeHandler"/>
        <result column="roleId" property="roleId" jdbcType="INTEGER"/>
        <result column="roleName" property="roleName" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="CHAR"/>
        <result column="headImg" property="headImg" jdbcType="VARCHAR"/>
        <result column="wechatNo" property="wechatNo" jdbcType="VARCHAR"/>
        <result column="department" property="department" jdbcType="VARCHAR"/>
        <result column="enrolTime" property="enrolTime" jdbcType="CHAR"/>
        <result column="score" property="score" jdbcType="INTEGER"/>
    </resultMap>

    <resultMap id="userJurisdiction" type="com.jwy.entity.UserJurisdictionDto">
        <result column="serviceId" property="serviceId" jdbcType="CHAR"/>
        <result column="serviceUrl" property="serviceUrl" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="queryUserInfo" resultType="com.jwy.entity.UserInfoDto" resultMap="userInfo">
        SELECT * FROM t_user WHERE userId in
        <foreach collection="userIds" item="id" open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>

    <select id="checkPassword" resultType="java.lang.String">
        SELECT userId FROM t_user WHERE userNumber = #{accountNo} AND password = #{password}
    </select>

    <update id="updateUserScore">
        UPDATE t_user SET score = score + #{score} WHERE userId = #{userId}
    </update>

    <select id="queryUserJurisdiction" resultType="com.jwy.entity.UserJurisdictionDto" resultMap="userJurisdiction">
        SELECT
    </select>

</mapper>